<div class="container">
  <div class="row">
    <div class="coll-6 offset-3">
      <h2><%= @restaurant.name %></h2>
      <p>Address : <%= @restaurant.address %></p>
      <p>Tel : <%= @restaurant.phone_number %> </p>
      <p>Category : <%= @restaurant.category  %></p>
      <p><%= link_to "Restaurants List", restaurants_path, class: "btn btn-primary" %></p>

      <p><%= @restaurant.reviews.each do |review| %></p>
      <p>Rating : <%= review.rating %></p>
      <p>Review : <%= review.content %></p>
      <p> <%= link_to "Remove",
            review_path(review),
            method: :delete,
            data: { confirm: "Are you sure?" } %></p>
      <% end %>
      <%= link_to "leave a review",  new_restaurant_review_path(@restaurant), class: "btn btn-primary"  %>
    </div>
  </div>
</div>
